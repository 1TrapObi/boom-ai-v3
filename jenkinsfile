pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the Git repository
                git branch: 'master', url: 'https://github.com/1TrapObi/boom-ai-v3.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install'
            }
        }

        stage('Build Frontend') {
            steps {
                // Build the React frontend
                sh 'npm run build'
            }
        }

        stage('Run Backend Tests') {
            steps {
                // Run backend unit and integration tests
                sh 'npm test'
            }
        }

        stage('Deploy to Azure') {
            steps {
                // Deploy the application to Azure
                echo 'Deploying to Azure...'
                sh 'az webapp up --name boomai-app --resource-group BoomAIGroup --plan BoomAIPlan --runtime "NODE|14-lts" --src-path ./build'
            }
        }
    }

    post {
        always {
            // Actions that always run, regardless of the build outcome
            echo 'Cleaning up...'
            cleanWs() // Clean workspace
        }
        success {
            // Actions that run only if the build succeeds
            echo 'Build and deployment succeeded!'
        }
        failure {
            // Actions that run only if the build fails
            echo 'Build or deployment failed!'
            mail to: 'farhanbukhari14@gmail.com',
                 subject: "Jenkins Build Failed: ${currentBuild.fullDisplayName}",
                 body: "The Jenkins build has failed. Please check the console output for more details."
        }
    }
}
